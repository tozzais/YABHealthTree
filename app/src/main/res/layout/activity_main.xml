<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hanyu.healthtree.yabhealthtree.widget.VerifyEditView
        android:id="@+id/edtTxtVerify"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:cursorVisible="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number"
        app:VerifyCodeLength="4"
        app:VerifyCodeInterval="20dp"
        app:VerifyCodeBackResoure="#999999"
        app:VerifyCodeTextColor="#fff"
        app:VerifyCodeTextSize="24sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="确定"/>

</RelativeLayout>
